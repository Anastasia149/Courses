@model Courses.ViewModels.CreateCourseViewModel
@{
    ViewData["Title"] = "Создание нового курса";
}

<div class="container mt-4">
    <h2>Создание нового курса</h2>

    <form asp-action="CreateCourse" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ShortDescription" class="form-label"></label>
            <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="DifficultyLevel" class="form-label"></label>
                <select asp-for="DifficultyLevel" class="form-select">
                    <option value="">Выберите уровень...</option>
                    <option value="Начинающий">Начинающий</option>
                    <option value="Средний">Средний</option>
                    <option value="Продвинутый">Продвинутый</option>
                </select>
                <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Создать курс</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}